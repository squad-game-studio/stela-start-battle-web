<style>
  .slider {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    position: relative;
  }

  .slider .list .item {
    position: absolute;
    inset: 0 0 0 0;
  }

  .slider .list .item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content {
    position: absolute;
    top: 20%;
    width: 1140px;
    max-width: 80%;
    left: 50%;
    transform: translateX(-50%);
    padding-right: 30%;
    box-sizing: border-box;
    color: #fff;
    text-shadow: 0 5px 10px #0004;
  }
  .title,
  .topic {
    font-weight: bolder;
    font-size: 5em;
    line-height: 1.3em;
  }

  .topic {
    color: #f1683a;
  }

  .thumbnail {
    position: absolute;
    bottom: 50px;
    left: 50%;
    width: max-content;
    z-index: 100;
    display: flex;
    gap: 20px;
  }

  .thumbnail .item {
    width: 150px;
    height: 220px;
    flex-shrink: 0;
    position: relative;
  }

  .thumbnail .item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
  }

  .thumbnail .item .content {
    position: absolute;
    transform: translateY(50%);
    bottom: 10px;
    right: 10px;
    left: 10px;
  }

  .thumbnail .item .content .title {
    font-weight: bold;
    font-size: 1.3rem;
  }

  .arrows {
    position: absolute;
    top: 80%;
    right: 52%;
    width: 300px;
    max-width: 30%;
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .arrows button {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #eee4;
    border: none;
    font-family: monospace;
    color: #fff;
    font-weight: bold;
    font-size: large;
    transition: 0.5s;
    z-index: 100;
  }

  .arrows button:hover {
    background-color: #eee;
    color: #555;
  }

  .slider .list .item:nth-child(1) {
    z-index: 1;
  }

  .slider .list .item:nth-child(1) .title,
  .slider .list .item:nth-child(1) .topic,
  .slider .list .item:nth-child(1) .des {
    transform: translateY(50px);
    filter: blur(20px);
    opacity: 0;
    animation: showcontent 0.5s 0.1s linear 1 forwards;
  }

  @keyframes showcontent {
    to {
      opacity: 1;
      filter: blur(0);
      transform: translateY(0);
    }
  }

  .slider .list .item:nth-child(1) .title {
    animation-delay: 0.6s;
  }

  .slider .list .item:nth-child(1) .topic {
    animation-delay: 0.8s;
  }

  .slider .list .item:nth-child(1) .des {
    animation-delay: 1s;
  }
</style>
