    overflow: hidden;
    border: 1.5px solid #f1683a;
    padding-left: 10%;
    padding-right: 10%;
    padding-top: 4.5%;

    p {
      line-height: 160%;
    }
  }

  .back {
    transform: rotateY(180deg);
  }
  .card:hover .inner-card {
    transform: rotateY(-180deg);
    box-shadow: #141414;
  }
</style>
